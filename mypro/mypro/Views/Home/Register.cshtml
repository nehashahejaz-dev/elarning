@model mypro.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - E-Learning Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Unbounded:wght@300;400;600;700&display=swap"
          rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="login-page">

    <!-- Main Content -->
    <div class="container d-flex align-items-center justify-content-center min-vh-100 pb-5">
        <div class="row w-100 justify-content-center">
            <div class="col-md-6 col-lg-5 col-xl-4">
                <div class="glass-card p-4 p-md-5 animate__animated animate__zoomIn">
                    <div class="text-center mb-4">
                        <h2 class="unbounded fw-bold text-white">Welcome TO ELERANING</h2>
                        <p class="text-white-50">Please Register First</p>
                    </div>

                    <form asp-action="Register" method="post">

                        <!-- Username/Email Input -->
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="FullName"  class="form-control glass-input" id="floatingInput"
                                   placeholder="Full Name" >
                            <label for="floatingInput">Full Name</label>
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text"  asp-for="Email" class="form-control glass-input" id="floatingInput"
                                   placeholder="name@example.com" >
                            <label for="floatingInput">name@example.com</label>
                            <span class="text-danger" asp-validation-for="Email"></span>

                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3 position-relative">
                            <input type="password" asp-for="PasswordHash" class="form-control glass-input" id="floatingPassword"
                                   placeholder="Password" >
                            <label for="floatingPassword">Password</label>
                            <span class="password-toggle" onclick="togglePasswordVisibility()">
                                <i class="bi bi-eye-slash" id="toggleIcon"></i>
                            </span>
                            <span class="text-danger" asp-validation-for="PasswordHash"></span>

                        </div>
                              <input type="hidden" asp-for="RoleId" value="@ViewBag.StudentId" />
                           

                        <!-- Login Button -->
                        <div class="d-grid mb-4">
                            <button type="submit"
                                    class="btn btn-primary btn-lg btn-block w-100 d-flex justify-content-center "
                                    style="color: white !important;">
                                Register <i class="bi bi-box-arrow-in-right ms-3"></i>
                            </button>

                        </div>
                        
                        <!-- Sign Up Link -->
                        <div class="text-center">
                            <p class="text-white-50 mb-0">
                                Do have an account?
                                <a asp-action="login" class="text-theme-light fw-bold text-decoration-none">
                                    Sign
                                    In
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Background Elements (optional, for visual interest) -->
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>


</body>

</html>
</div>


