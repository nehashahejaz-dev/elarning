
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - E-Learning Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Unbounded:wght@300;400;600;700&display=swap"
          rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="login-page">

        <!-- Main Content -->
        <div class="container d-flex align-items-center justify-content-center min-vh-100 pb-5">
            <div class="row w-100 justify-content-center">
                <div class="col-md-6 col-lg-5 col-xl-4">
                    <div class="glass-card p-4 p-md-5 animate__animated animate__zoomIn">
                        <div class="text-center mb-4">
                            <h2 class="unbounded fw-bold text-white">Welcome Back</h2>
                            <p class="text-white-50">Please login to continue</p>
                        </div>

                    <form asp-action="Login" method="post">
                            <!-- Username/Email Input -->
                            <div class="form-floating mb-3">
                                <input type="text" name="email" class="form-control glass-input" id="floatingInput"
                                   placeholder="name@example.com" required>
                                <label for="floatingInput">name@example.com</label>
                            </div>

                            <!-- Password Input -->
                            <div class="form-floating mb-3 position-relative">
                            <input type="password" name="password" class="form-control glass-input" id="floatingPassword"
                                       placeholder="Password" required>
                                <label for="floatingPassword">Password</label>
                                <span class="password-toggle" onclick="togglePasswordVisibility()">
                                    <i class="bi bi-eye-slash" id="toggleIcon"></i>
                                </span>
                            </div>

                            <!-- Forgot Password & Remember Me -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input glass-checkbox" type="checkbox" value=""
                                           id="rememberMe">
                                    <label class="form-check-label text-white-50" for="rememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a href="#" class="text-theme-light text-decoration-none small">Forgot Password?</a>
                            </div>

                            <!-- Login Button -->
                            <div class="d-grid mb-4">
                                <button type="submit"
                                        class="btn btn-primary btn-lg btn-block w-100 d-flex justify-content-center "
                                        style="color: white !important;">
                                    Login <i class="bi bi-box-arrow-in-right ms-3"></i>
                                </button>

                            </div>
                            <span class="text-danger">
                                @ViewBag.Error</span>
                            <!-- Sign Up Link -->
                            <div class="text-center">
                                <p class="text-white-50 mb-0">
                                    Don't have an account?
                                    <a asp-action="register" class="text-theme-light fw-bold text-decoration-none">
                                        Sign
                                        Up
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Background Elements (optional, for visual interest) -->
        <div class="bg-shape shape-1"></div>
        <div class="bg-shape shape-2"></div>


</body>

</html>
</div>


        