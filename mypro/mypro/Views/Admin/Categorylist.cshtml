
@{
    ViewData["Title"] = "Categorylist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



        <!-- Card Body -->
        <div class="card-body col-md-6 mx-auto vh-100 py-5">
            <table class="table table-hover align-middle text-center mt-5">
                <thead class="table-light">
                    <tr>
                        <th style="width:10%">#</th>
                        <th style="width:50%">Category Name</th>
                        <th style="width:20%">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        var i = 1;

                        foreach (var role in Model)

                        {

                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@i</span>
                                </td>

                                <td class="fw-semibold">
                                    @role.CategoryName
                                </td>

                                <td>
                                    <a asp-action="EditCategory" asp-route-id="@role.CategoryId"
                                       class="btn btn-outline-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="DeleteCategory" asp-route-id="@role.CategoryId"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this role?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted py-4">
                                <i class="fas fa-info-circle me-1"></i>
                                No roles available
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

