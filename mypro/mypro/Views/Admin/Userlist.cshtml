
@{
    ViewData["Title"] = "Userlist";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 d-none d-md-block">
        </div>
        <!-- Card Body -->
        <div class="card-body col-md-8 mx-auto min-vh-100 py-5 ">
            <table class="table table-hover align-middle text-center mt-5">
                <thead class="table-light ms-2">
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 15%">Full Name</th>
                        <th style="width: 25%">Email</th>
                        <th style="width: 15%">Role</th>
                        <th style="width: 20%">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        var i = 1;

                        foreach (var list in Model)

                        {

                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@i</span>
                                </td>

                                <td class="fw-semibold">
                                    @list.FullName
                                </td>
                                <td class="fw-semibold">
                                    @list.Email
                                </td>
                                <td class="fw-semibold">
                                    @list.Role?.RoleName
                                </td>
                               

                                <td>
                                    <a asp-action="EditUser" asp-route-id="@list.UserId"
                                       class="btn btn-outline-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="DeleteUser" asp-route-id="@list.UserId"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this User?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted py-4">
                                <i class="fas fa-info-circle me-1"></i>
                                No roles available
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</<div></div>