@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container col-md-6 mx-auto">
    <div class="card shadow-lg border-0 rounded-3 ">
        <!-- Card Header -->
        <div class="card-header bg-gradient d-flex justify-content-between align-items-center"
             style="background: linear-gradient(90deg, #4e73df, #224abe); color:white;">
            <h5 class="mb-0">
                <i class="fas fa-user-cog me-2"></i> Role Management
            </h5>
            <a asp-action="AddRole" class="btn btn-light btn-sm">
                <i class="fas fa-plus"></i> Add Role
            </a>
        </div>

        <!-- Card Body -->
        <div class="card-body col-md-6 mx-auto vh-100">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th style="width:10%">#</th>
                        <th style="width:50%">Role Name</th>
                        <th style="width:20%">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        var i = 1;
                       
                        foreach (var role in Model)
                           
                        {
                           
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@i</span>
                                </td>

                                <td class="fw-semibold">
                                    @role.RoleName
                                </td>

                                <td>
                                    <a asp-action="EditRole" asp-route-id="@role.RoleId"
                                       class="btn btn-outline-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="DeleteRole" asp-route-id="@role.RoleId"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete this role?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                          
                        }
                        
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted py-4">
                                <i class="fas fa-info-circle me-1"></i>
                                No roles available
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
