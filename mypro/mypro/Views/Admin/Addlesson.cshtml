@model mypro.Models.Lesson

@{
    ViewData["Title"] = "Create Lesson";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="container-fluid d-flex align-items-center justify-content-center mt-5" style="min-height: 85vh;">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success  text-white py-3">
                    <h5 class="mb-0">Add New Lesson</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="addlesson" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Section</label>
                            <select asp-for="SectionId" class="form-select" asp-items="ViewBag.SectionList">
                                <option value="">-- Select Section --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Lesson Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter title" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Video URL</label>
                            <input asp-for="ContentUrl" class="form-control" placeholder="YouTube Link" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Duration</label>
                                <input asp-for="Duration" type="time" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3 pt-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsFree" value="true" />
                                    <label class="form-check-label fw-bold">Free Preview</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Save Lesson</button>
                            <a asp-action="Index" class="btn btn-light">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>