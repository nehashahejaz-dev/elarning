@model mypro.Models.User
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container min-vh-100 pt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 mt-4">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i> Edit User Details</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditUser">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group mb-4">
                            <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="FullName" class="form-control" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PasswordHash" class="form-label fw-bold">Password (Leave blank to keep same)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="PasswordHash" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Assign Role</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleList">
                                </select>
                            </div>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                <i class="fas fa-sync-alt me-1"></i> Update User
                            </button>
                            <a asp-action="Userlist" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted small">
                    Last Modified: @(Model.CreatedAt?.ToString("dd MMM yyyy") ?? "N/A")
                </div>
            </div>
        </div>
    </div>
</div>
