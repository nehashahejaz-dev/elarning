@model IEnumerable<mypro.Models.Quiz>

@{
    ViewData["Title"] = "Quiz Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 d-none d-md-block"></div>

        <div class="col-md-10 mx-auto min-vh-100 py-5">
            <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
                <h4 class="fw-bold text-dark"><i class="fas fa-question-circle me-2 text-primary"></i> Quiz Management</h4>
                <a asp-action="Addquiz" class="btn btn-primary shadow-sm">
                    <i class="fas fa-plus me-1"></i> Create New Quiz
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <table class="table table-hover align-middle text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 25%">Quiz Title</th>
                                <th style="width: 25%">Course</th>
                                <th style="width: 15%">Questions</th>
                                <th style="width: 10%">Passing Score</th>
                                <th style="width: 20%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">@i</span></td>
                                        <td class="fw-bold">@item.Title</td>
                                        <td>
                                            <span class="badge rounded-pill bg-info text-dark">@item.Course?.Title</span>
                                        </td>
                                        <td>
                                            <span class="fw-semibold">@item.Questions.Count</span> Questions
                                        </td>
                                        <td>@item.PassingScore</td>
                                        <td>
                                            <a asp-action="QuizDetails" asp-route-id="@item.QuizId"
                                               class="btn btn-outline-info btn-sm me-1" title="View Questions">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a asp-action="AddQuestion" asp-route-quizId="@item.QuizId"
                                               class="btn btn-outline-success btn-sm me-1" title="Add Questions">
                                                <i class="fas fa-plus"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.QuizId"
                                               class="btn btn-outline-warning btn-sm me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.QuizId"
                                               class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Deleting this quiz will remove all questions. Continue?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="py-5 text-muted">
                                        <i class="fas fa-folder-open fa-3x mb-3 d-block"></i>
                                        No quizzes found. Create your first quiz!
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>