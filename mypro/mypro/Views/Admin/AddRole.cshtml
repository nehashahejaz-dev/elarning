@model mypro.Models.Role

@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container vh-100">
    <div class="row h-100 align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="mb-0"><i class="fas fa-user-shield me-2"></i> Create New Role</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddRole">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                                <input asp-for="RoleName" class="form-control" placeholder="e.g. Instructor, Manager" />

                            </div>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-1"></i> Create Role
                            </button>
                            <a asp-action="Rolelist" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted small">
                    Management System - Role Configuration
                </div>
            </div>
        </div>
    </div>
</div>