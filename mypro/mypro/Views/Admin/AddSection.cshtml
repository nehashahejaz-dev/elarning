@model mypro.Models.Section

@{
    ViewData["Title"] = "Create Section";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-layer-group me-2"></i> Add New Section</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Addsection" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Course</label>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseList">
                                <option value="">-- Choose Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Section Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Getting Started / Advanced Tools" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Display Order</label>
                            <input type="number" name="SortOrder" class="form-control" placeholder="e.g. 1, 2, 3" />
                            <small class="text-muted">.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Create Section
                            </button>
                            <a asp-action="Sectionlist" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>