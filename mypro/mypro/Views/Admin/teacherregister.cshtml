@model mypro.Models.User

@{
    ViewData["Title"] = "teacherregister";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container min-vh-100 pt-5 py-5">
    <div class="row h-100 align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3 mt-5">
                    <h4 class="mb-0"><i class="fas fa-user-shield me-2"></i> Create New User</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="teacherregister">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="FullName" class="form-label fw-bold">Full name </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="Enter your name " />

                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold"> Email </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="e.g. abc@gmail.com" />

                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="PasswordHash" class="form-label fw-bold">PasswordHash </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                                <input asp-for="PasswordHash" class="form-control" placeholder="e.g. Abc@123" />

                            </div>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Select Role</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>

                                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleList">
                                </select>

                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i> Create User
                            </button>
                            <a asp-action="Userlist" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted small">
                    Management System - Role Configuration
                </div>
            </div>
        </div>
    </div>
</div>